{
  "name": "claude-agent-sdk-experiments",
  "version": "0.1.0",
  "description": "Claude Agent SDK running in E2B sandboxes",
  "scripts": {
    "setup": "./setup.sh",
    "agent": "source .venv/bin/activate && python run_agent.py",
    "validate": "source .venv/bin/activate && python scripts/validate_setup.py",
    "build:template": "cd agents/base && source ../../.venv/bin/activate && python build_dev.py",
    "ts:example": "tsx examples/basic_typescript.ts",
    "ts:streaming": "tsx examples/streaming_example.ts",
    "ts:console-streaming": "tsx examples/console_streaming_example.ts",
    "ts:sse-api": "tsx examples/sse-streaming-api.ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@e2b/code-interpreter": "^1.0.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
